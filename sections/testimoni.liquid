<style>
  /* Ensure testimonial cards have consistent height and alignment */
  .review-slider .card-testimoni {
    display: flex;
    flex-direction: column;
    height: 100%; /* Encourage card to fill slider item height */
    justify-content: space-between; /* Space out text and author info */
  }

  .review-slider .card-testimoni_text {
    flex-grow: 1; /* Allow text block to take available vertical space */
    margin-bottom: 1rem; /* Add some space above the author */
  }
</style>

{% schema %}
{
    "name": "Testimoni Section",
    "tag": "section",
    "class": "testimoni section-full",
    "settings": [
        {
            "type": "text",
            "id": "badge_text",
            "label": "Badge Text",
            "default": "Testimonial"
        },
        {
            "type": "text",
            "id": "title",
            "label": "Section Title",
            "default": "What they said about us"
        }
    ],
    "blocks": [
        {
            "type": "testimonial",
            "name": "Testimonial",
            "settings": [
                {
                    "type": "text",
                    "id": "testimonial_text",
                    "label": "Testimonial Text",
                    "default": "Finally, a healthcare service that makes sense! The online consultation was quick, the provider was knowledgeable, and getting my specific medication delivered was effortless. It saved me so much time and hassle."
                },
                {
                    "type": "image_picker",
                    "id": "image",
                    "label": "Profile Image"
                },
                {
                    "type": "text",
                    "id": "name",
                    "label": "Name",
                    "default": "Jenny Ortega"
                },
                {
                    "type": "text",
                    "id": "profession",
                    "label": "Profession",
                    "default": "Founder at Altair.co"
                }
            ]
        }
    ],
    "presets": [
        {
            "name": "Testimoni Section",
            "category": "Text",
            "blocks": [
                {
                    "type": "testimonial"
                }
            ]
        }
    ]
}
{% endschema %}
