            <h1 class="testimoni-content_title-text">{{ section.settings.title }}</h1>
        </div>
        <div class="testimoni-content_slider">
            <div class="review-slider" id="review-slider">
            {% if section.blocks != blank %}
                {% for block in section.blocks %}
                <div class="card-testimoni">
                    <p class="card-testimoni_text">"{{ block.settings.testimonial_text }}"</p>
                    <div class="card-testimoni_name">
                        <img class="card-testimoni_name-foto" src="{{ block.settings.image | img_url: '48x48' }}" alt="{{ block.settings.name }}" width="48" height="48">
